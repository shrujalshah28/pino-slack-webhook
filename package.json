{
  "name": "pino-slack-webhook",
  "version": "1.2.0",
  "description": "ðŸŒ² Send message to Slack via webhook",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pino-slack-webhook": "./dist/bin.js"
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "scripts": {
    "build": "rimraf dist && tsc",
    "dev": "npm run build && tsc --watch",
    "lint": "eslint --ext ts ./src",
    "test": "echo \"Error: no test specified\" && exit 1",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,css,md}": "prettier --write",
    "*.{ts,js}": "eslint --cache --fix"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/github",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package-lock.json",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shrujalshah28/pino-slack-webhook.git"
  },
  "keywords": [
    "pino",
    "transport",
    "slack",
    "webhook"
  ],
  "dependencies": {
    "chalk": "^4.1.0",
    "got": "^11.8.1",
    "pump": "^3.0.0",
    "pumpify": "^2.0.1",
    "split2": "^3.2.2",
    "through2": "^4.0.2",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/pino": "^6.3.4",
    "@types/pump": "^1.1.0",
    "@types/pumpify": "^1.4.1",
    "@types/split2": "^2.1.6",
    "@types/through2": "^2.0.36",
    "@types/yargs": "^15.0.12",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.3.0",
    "typescript": "^4.1.3"
  },
  "author": "Shrujal Shah <shrujal.shah@hotmail.com> (https://shrujalshah.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shrujalshah28/pino-slack-webhook/issues"
  },
  "homepage": "https://github.com/shrujalshah28/pino-slack-webhook#readme"
}
